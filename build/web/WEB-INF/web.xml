<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>validarLogin</servlet-name>
        <servlet-class>servlets.validarLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>criarConta</servlet-name>
        <servlet-class>servlets.criarConta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adicionarCarrinho</servlet-name>
        <servlet-class>servlets.adicionarCarrinho</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getCarrinho</servlet-name>
        <servlet-class>servlets.getCarrinho</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>finalizarCompra</servlet-name>
        <servlet-class>servlets.finalizarCompra</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validarLogin</servlet-name>
        <url-pattern>/validarLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>criarConta</servlet-name>
        <url-pattern>/criarConta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adicionarCarrinho</servlet-name>
        <url-pattern>/adicionarCarrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getCarrinho</servlet-name>
        <url-pattern>/getCarrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>finalizarCompra</servlet-name>
        <url-pattern>/finalizarCompra</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
